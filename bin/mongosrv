#!/usr/bin/env node
// Generated by CoffeeScript 1.8.0
(function() {
  var exec, existsSync, mkdirSync, which, _ref, _ref1;

  _ref = require('fs'), existsSync = _ref.existsSync, mkdirSync = _ref.mkdirSync;

  _ref1 = require('shelljs'), exec = _ref1.exec, which = _ref1.which;

  if (!which('mongod')) {
    console.log('missing mongod command');
    process.exit();
  }

  if (!existsSync('mongodata')) {
    console.log('creating mongodata directory');
    mkdirSync('mongodata');
  }

  exec('mongod --dbpath ./mongodata', {
    async: true
  });

}).call(this);
